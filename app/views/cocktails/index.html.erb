<h1>Cocktails</h1>

<% @cocktails.each do |cocktail| %>
<%=link_to cocktail_path(cocktail.id) do%>
<p><%=cocktail.name %>
<%= link_to cocktail_path(cocktail), method: :delete, data: { confirm: "Are you sure?"} do%>
<i class="far fa-trash-alt"></i>
<% end %>
</p>
<% end %>

<% end %>

<%= link_to "Add new Cocktail", new_cocktail_path(), class: "btn btn-primary" %>


