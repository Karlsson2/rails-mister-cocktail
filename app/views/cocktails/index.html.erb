<div class="cards">

  <% @cocktails.each do |cocktail| %>

    <div class="card-category" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.3)), url(<%= cl_image_path cocktail.photo.key, crop: :fill %>)">
      <%=link_to cocktail_path(cocktail.id) do%>
        <%=cocktail.name %>
        <%= link_to cocktail_path(cocktail), method: :delete, data: { confirm: "Are you sure?"}, class: "bin-button" do%>
          <i class="far fa-trash-alt "></i>
        <% end %>

      <% end %>
    </div>
  <% end %>

</div>
