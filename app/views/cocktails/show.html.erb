<div class="image-card" style="background-image: url(https://img2.goodfon.com/wallpaper/nbig/6/1d/tropical-drink-fresh-fruit-990.jpg)">
  <%= link_to cocktails_path(), class: "arrow" do %>
  <i class="fas fa-arrow-left gradient"></i>
  <% end %>
  <h1><%=@cocktail.name %></h1>
</div>
<div class="cards-show">
  <div class="card-show-ingredients">
    <h2 class="gradient">Ingredients:</h2>
    <ul class="list-group">
      <% @cocktail.doses.each do |dose|%>

      <li class="list-group-item"><%= dose.description%> of <%= dose.ingredient.name %>
      <%= link_to dose_path(dose), method: :delete, data: { confirm: "Are you sure?"} do%>
        <i class="far fa-trash-alt gradient"></i>
      <% end %>
      </li>
      <% end %>
    </ul>

  <%= link_to "Add ingredient", new_cocktail_dose_path(@cocktail), class: "btn btn-primary" %>
  <div class="cards-show-ingredients">
    <%= cl_image_tag("ylahjbyrre4tfa3xut8v",
    width: 400, height: 300, crop: :fill) %>
  </div>
</div>
</div>
