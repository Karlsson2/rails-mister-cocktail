<div class="banner" style="background-image: url(https://img2.goodfon.com/wallpaper/nbig/6/1d/tropical-drink-fresh-fruit-990.jpg);">
<h1><%=@cocktail.name %></h1>
</div>
<h2>Ingredients:</h2>
<% @cocktail.doses.each do |dose|%>

  <p><%= dose.description%> of <%= dose.ingredient.name %>
  <%= link_to dose_path(dose), method: :delete, data: { confirm: "Are you sure?"} do%>
    <i class="far fa-trash-alt"></i>
  <% end %>
  </p>
<% end %>

<%= link_to "Add ingredient", new_cocktail_dose_path(@cocktail), class: "btn btn-primary" %>
<%= link_to "back", cocktails_path(), class: "btn btn-primary" %>

