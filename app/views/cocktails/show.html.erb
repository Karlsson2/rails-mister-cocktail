<div class="image-card" style="background-image: url(<%= cl_image_path @cocktail.photo.key, crop: :fill %>)">
  <%= link_to cocktails_path(), class: "arrow" do %>
  <i class="fas fa-arrow-left gradient"></i>
  <% end %>
  <h1><%=@cocktail.name %></h1>
</div>
<div class="cards-show">
  <div class="card-show-ingredients">
    <h2 class="gradient">Ingredients:</h2>
    <ul class="list-group">
      <% @cocktail.doses.each do |dose|%>

      <li class="list-group-item"><%= dose.description%> of <%= dose.ingredient.name %>
      <%= link_to dose_path(dose), method: :delete, data: { confirm: "Are you sure?"} do%>
        <i class="far fa-trash-alt gradient"></i>
      <% end %>
      </li>
      <% end %>
    </ul>
  </div>
  <div class="card-show-ingredients">
      <h1>Add your Ingredient:</h1>

      <%= simple_form_for [@cocktail,@dose] do |f| %>
      <%= f.input :description %>
      <%= f.association :ingredient %>
      <%= f.button :submit, "New Ingredient", class: "btn btn-primary"%>
      <% end %>

  </div>
</div>
